<Window x:Class="WpfAppLab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppLab"
        mc:Ignorable="d"
        Title="Оптовый склад" Height="550" Width="1400">
    <Grid>
        <TabControl FontSize="16px">
            <TabItem Header="Отдел кадров">
                <Grid Background="#FFE5E5E5">
                    <Label Content="Отед кадров" FontSize="20px" FontWeight="Bold" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                    <DataGrid Name="EmpGrid" Margin="0,52,0,0" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <!-- Опять-таки определяем каждый столбец вручную -->
                            <DataGridTextColumn Binding="{Binding FullName}" Header="ФИО"></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Список товаров">
                <Grid Background="#FFE5E5E5">
                    <Label Content="Список товаров" FontSize="20px" FontWeight="Bold" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem Header="Список поставщиков">
                <Grid Background="#FFE5E5E5">
                    <Label Content="Список поставщиков" FontSize="20px" FontWeight="Bold" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem Header="Список заказчиков">
                <Grid Background="#FFE5E5E5">
                    <Label Content="Список заказчиков" FontSize="20px" FontWeight="Bold" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem Header="Заказы">
                <Grid Background="#FFE5E5E5">
                    <Label Content="Заказы" FontSize="20px" FontWeight="Bold" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
